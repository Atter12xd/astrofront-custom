---
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
import ProductCard from "./ProductCard"; // Asegúrate de que esta ruta sea correcta

// Simulando los datos dinámicos de los productos de "THE NORTH FACE"
const products = [
  {
    id: "1",
    title: "BOSS X GOAT X LEGEND a",
    description: "",
    price: "S/ 50.00",
    sizes: ["S", "M", "L", "XL"],
    colors: ["#FF0000", "#000000", "#00FF00"], // Rojo, Negro, Verde
    images: [
      "/images/boss-goat-white.webp",
      "/images/boss-goat-white2.webp",
      "/images/boss-goat-white3.webp",
    ],
  },
  {
    id: "2",
