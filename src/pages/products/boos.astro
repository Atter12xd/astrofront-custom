      "/images/boss-goat-black.webp",
      "/images/boss-goat-black2.webp",
      "/images/boss-goat-black3.webp",
    ],
  },

];
---

<Base title="BOSS X GOAT X LEGEND b">
  <section class="py-10">
    <div class="container grid grid-cols-1 gap-10">
      {products.map((product) => (
        <ProductCard key={product.id} product={product} client:load />
      ))}
    </div>
  </section>

  <CallToAction />
</Base>
