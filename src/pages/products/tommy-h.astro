---
import Base from "@/layouts/Base.astro";
import CallToAction from "@/partials/CallToAction.astro";
import ProductCard from "./ProductCard"; // Asegúrate de que esta ruta sea correcta

// Simulando los datos dinámicos de los productos de "Tommy H"
const products = [
  {
    id: "1",
    title: "Polo Tommy H Classic",
    description: "Un polo clásico de alta calidad diseñado para un estilo cómodo y elegante.",
    price: "S/ 50.90",
    sizes: ["S", "M", "L", "XL"],
    colors: ["#FFFFFF", "#000000", "#0000FF"], // Blanco, Negro, Azul
    images: [
      "/images/Polo_tom.webp",
      "/images/polo_tom_fre.webp",
      "/images/polo_tom_es.webp",
    ],
  }
 
];
---

<Base title="Tommy H">
  <section class="py-10">
    <div class="container grid grid-cols-1 gap-10">
      {products.map((product) => (
        <ProductCard key={product.id} product={product} client:load />
      ))}
    </div>
  </section>

  <CallToAction />
</Base>
